#!/usr/bin/env bash

extension=""

if bash ./config/bin/is-macos; then
    if bash ./config/bin/is-arm64; then
        extension="darwin-arm64"
    else
        extension="darwin-amd64"
    fi
else
    extension="linux-amd64"
fi

go_installer="$(curl -s 'https://go.dev/VERSION?m=text' | head -n 1).$extension.pkg"
go_link="https://go.dev/dl/$go_installer"
go_tmp="/tmp/go"

curl --create-dirs --output-dir $go_tmp -JOL "$go_link"
rm -rf /usr/local/go
sudo installer -pkg "$go_tmp/$go_installer" -target /usr/local
rm -rf $go_tmp
